generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email                     String    @unique @db.VarChar(255)
  password                  String?   @db.VarChar(255)
  name                      String?   @db.VarChar(255)
  image                     String?   @db.VarChar(255)
  provider                  String    @default("credentials") @db.VarChar(50)
  externalId                String?   @db.VarChar(255)
  createdAt                 DateTime? @default(now()) @db.Timestamptz(6)
  updatedAt                 DateTime? @default(now()) @db.Timestamptz(6)
  currentHashedRefreshToken String?
  Monitor                   Monitor[]

  @@map("user")
}

model Monitor {
  id        String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String     @db.VarChar(255)
  url       String     @db.VarChar(2048)
  interval  Int        @default(60)
  status    Status     @default(PENDING)
  userid    String     @db.Uuid
  createdat DateTime?  @default(now()) @db.Timestamptz(6)
  updatedat DateTime?  @default(now()) @db.Timestamptz(6)
  user      User       @relation(fields: [userid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_monitor_user")
  checks    CheckLog[] @relation("MonitorChecks")
}

model CheckLog {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  monitorid    String    @db.Uuid
  statuscode   Int?
  responsetime Int
  status       Status    @default(PENDING)
  createdat    DateTime? @default(now()) @db.Timestamptz(6)
  monitor      Monitor   @relation("MonitorChecks", fields: [monitorid], references: [id])
}

model Incident {
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  monitorid  String    @db.Uuid
  reason     String?
  startedat  DateTime? @default(now()) @db.Timestamptz(6)
  resolvedat DateTime? @db.Timestamptz(6)
}

enum Status {
  UP
  DOWN
  PENDING
}
